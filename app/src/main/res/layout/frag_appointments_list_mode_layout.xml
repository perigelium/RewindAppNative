<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/llReturn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="19dp"
                android:layout_height="12dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="17dp"
                android:background="@drawable/menuicon"/>

            <TextView
                fontPath="fonts/SF_UI_Text_Medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="17dp"
                android:text="     "
                android:textColor="@color/black"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvScreenTitle"
            fontPath="fonts/SF_UI_Text_Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Appuntamenti"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/llOpenAppointmentsSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                fontPath="fonts/SF_UI_Text_Medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="17dp"
                android:text="     "
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="17dp"
                android:background="@drawable/searchicon_black"/>

        </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="0dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAppointments"
            fontPath="fonts/SF_UI_Text_Medium.ttf"
            android:layout_width="0dp"
            android:layout_height="29dp"
            android:layout_gravity="start"
            android:layout_marginLeft="17dp"
            android:layout_weight=".5"
            android:background="@drawable/button_blue_left"
            android:text="Appuntamenti"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnIntornoATe"
            fontPath="fonts/SF_UI_Text_Medium.ttf"
            android:layout_width="0dp"
            android:layout_height="29dp"
            android:layout_gravity="end"
            android:layout_marginRight="17dp"
            android:layout_weight=".5"
            android:background="@drawable/button_white_right"
            android:text="Intorno a te"
            android:textAllCaps="false"
            android:textColor="@color/blueDark"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="#ffcccccc"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_gravity="top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAppointmentsDailyMode"
                        fontPath="fonts/SF_UI_Text_Medium.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Giorno"
                        android:textColor="@color/blueDark"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/tvAppointmentsDailyModeUnderline"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/blue_underline_shape"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAppointmentsWeeklyMode"
                        fontPath="fonts/SF_UI_Text_Medium.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Settimana"
                        android:textColor="@color/blueDark"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/tvAppointmentsWeeklyModeUnderline"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/blue_underline_shape"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ibOpenCalendar"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="38dp"
                    android:layout_gravity="start|center_vertical"
                    android:background="@drawable/appointments_calendar_view"/>

                <ImageButton
                    android:id="@+id/ibAddPersonalTask"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/blue_plus"/>

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tvSelectedDayOrWeek"
            fontPath="fonts/SF_UI_Text_Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="27dp"
            android:maxWidth="320dp"
            android:text="current day/week"
            android:textColor="@color/blueDark"
            android:textSize="14sp"/>

        </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="#ffcccccc"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMapMode"
            android:layout_width="84dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="17dp"
            android:src="@drawable/button_appointments_map_mode_selector"
            app:backgroundTint="@android:color/transparent"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:fabSize="normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ListView
                android:id="@+id/lvDayEventsInPast"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#ffffffff"
                android:choiceMode="singleChoice"
                android:divider="@color/lightGrayCC"
                android:focusable="true">
            </ListView>

            <TextView
                fontPath="fonts/SF_UI_Text_Medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="17dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="38dp"
                android:maxWidth="320dp"
                android:text="PROSSIMI EVENTI"
                android:textColor="@color/orangeDark"
                android:textSize="22sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/orangeDark"/>

            <ListView
                android:id="@+id/lvDayEventsInFuture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:choiceMode="singleChoice"
                android:divider="@color/lightGrayCC"
                android:focusable="true">
            </ListView>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>