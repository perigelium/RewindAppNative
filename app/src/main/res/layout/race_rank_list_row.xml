<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/tvSerialNumber"
                fontPath="fonts/SF_UI_Text_Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxWidth="130dp"
                android:text="#"
                android:textColor="#ff000000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvAgentName"
                fontPath="fonts/SF_UI_Text_Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="35dp"
                android:maxWidth="100dp"
                android:text="AGENTE"
                android:textColor="#ff000000"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/llAgentDetailsAllowedMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/SF_UI_Text_Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:maxWidth="100dp"
                    android:text="DETTAGLI"
                    android:textColor="@color/blueDark"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/details_arrow_right"/>

                <TextView
                    android:id="@+id/tvPointsEarned"
                    fontPath="fonts/SF_UI_Text_Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginStart="17dp"
                    android:text="PUNTI"
                    android:maxLength="7"
                    android:textColor="#ff000000"
                    android:textSize="14sp"/>

            </LinearLayout>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="#ffcccccc"/>

    </LinearLayout>

</LinearLayout>