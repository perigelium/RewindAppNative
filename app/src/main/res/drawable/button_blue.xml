<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle" >

            <solid android:color="#ff003487"/>

            <stroke
                android:width="3dp"
                android:color="#ff003487" />
            <corners android:radius="4dp" />

        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle" >

            <solid android:color="#ff005fa7"/>

            <stroke
                android:width="3dp"
                android:color="#ff005fa7" />
            <corners android:radius="4dp" />

        </shape>
    </item>

</selector>

